// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl         = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
  shadowDatabaseUrl = env("POSTGRES_URL_NON_POOLING") // used for migrations
}

model PullRequest {
  id         String   @id @default(cuid())
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  owner      String
  repo       String
  pullNumber Int
  title      String?
  status     String?
  userId     String?

  @@unique([owner, repo, pullNumber])
}

model PreReview {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  owner     String
  repo      String
  base      String
  head      String
  title     String?
  status    String?
  userId    String?

  @@unique([owner, repo, base, head])
}

model Comment {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  lineContent String
  path        String
  body        String
  inReplyToId String?
  preReviewId String
  authorId    String

  @@index([preReviewId])
  @@index([authorId])
}

model Issue {
  id                  String   @id @default(cuid())
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
  title               String
  owner               String?
  repo                String?
  issueNumber         Int?
  googleDocUrl        String?
  userId              String?
  status              String?
  createdAtFromGithub String?
}
